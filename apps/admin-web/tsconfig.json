// apps/admin-web/tsconfig.json
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx", // React 17+ 新转换
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["src/.umi/*"]
    }
  },
  "include": ["src/**/*", "./**/*.d.ts", "./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules"]
}

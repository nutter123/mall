<!-- 使用 Tailwind 原子类控制布局和间距 (w-full, h-40, bg-red-500) -->
<view class="w-full min-h-screen bg-gray-100">
  
  <!-- 头部：自定义样式较多，可能使用 Sass 编写 .header 类，或者直接 Tailwind一把梭 -->
  <view class="w-full h-40 bg-white flex items-center px-6 mb-4">
    <t-avatar image="{{userInfo.avatar}}" size="large" />
    <view class="ml-4">
      <view class="text-lg font-bold text-gray-800">{{userInfo.nickname || '点击登录'}}</view>
      <view class="text-sm text-gray-500 mt-1">普通会员</view>
    </view>
  </view>

  <!-- 订单入口：使用 TDesign 配合 Tailwind 边距 -->
  <view class="mx-3 bg-white rounded-lg mb-4 overflow-hidden">
    <t-cell title="我的订单" arrow hover />
    <!-- 订单状态 Grid -->
    <t-grid border="{{false}}" column="{{4}}">
      <t-grid-item text="待付款" icon="wallet" />
      <t-grid-item text="待发货" icon="package" />
      <t-grid-item text="待收货" icon="location" />
      <t-grid-item text="售后" icon="service" />
    </t-grid>
  </view>

  <!-- 常用功能 -->
  <view class="mx-3 bg-white rounded-lg overflow-hidden">
    <t-cell title="收货地址" arrow left-icon="location" />
    <t-cell title="联系客服" arrow left-icon="service" />
    <t-cell title="设置" arrow left-icon="setting" />
  </view>

</view>
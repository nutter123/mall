<view class="container">
  <view class="title">精选好物</view>

  <view class="product-list">
    <view class="product-card" wx:for="{{productList}}" wx:key="id" data-id="{{item.id}}" bindtap="goToDetail">
      <t-image src="{{item.mainImage}}" mode="aspectFill" width="100%" height="170" />
      <view class="info">
        <view class="name">{{item.title}}</view>
        <view class="price">¥ {{item.skus[0].price || '99.00'}}</view>
      </view>
    </view>
  </view>

  <view wx:if="{{productList.length === 0 && !loading}}" class="empty">
    暂无商品，请去后台发布
  </view>
</view>

{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "types": ["miniprogram-api-typings"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./miniprogram/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["miniprogram/**/*"],
  "exclude": ["node_modules"]
}
